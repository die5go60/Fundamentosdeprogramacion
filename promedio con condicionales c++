#include <iostream>
using namespace std;

int main()
{
    int A, B, C;
    cout << "Ingresar un numero: ";
    cin >> A;
    if ((A>=0) && (A<=10))
    { 
        cout << "Ingresar el segundo valor: "; 
            cin>>B;
            if ((B >= 0) && (B <= 10))
            {
                cout << "Ingresar el tercer valor";
                cin >> C;
                if ((C >= 0) && (C <= 10))
                    cout<<"El promedio es:" << (A + B + C) / 3.0;
                else
                    cout << "Error " << C << " no esta dentro del rango" << endl;
            }
            else
                cout << "Error " << B << " no esta dentro del rango" << endl;
    } 
    else 
        cout << "Error " << A << " no esta dentro del rango" << endl;
    return 0;
}
